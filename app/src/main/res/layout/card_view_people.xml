<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="25dp"
    android:layout_width="323dp"
    android:layout_height="256dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/people_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/jack"
            android:elevation="3dp"></ImageView>

        <TextView
            android:id="@+id/people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Jack Daneil"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/people_image"
            android:layout_marginTop="10dp"
            android:elevation="3dp"
            android:textStyle="bold"
            android:textColor="#000"></TextView>

        <TextView
            android:id="@+id/people_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Director, Cinematographer"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/people_name"
            android:layout_marginTop="2dp"
            android:elevation="3dp"
            android:textColor="#000"></TextView>

        <TextView
            android:id="@+id/posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Posts"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/people_profession"
            android:layout_marginTop="23dp"
            android:elevation="3dp"
            android:textColor="#000"></TextView>

        <TextView
            android:id="@+id/no_of_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20.41dp"
            android:text="330"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/posts"
            android:elevation="3dp"
            android:textColor="#000"></TextView>

        <TextView
            android:id="@+id/no_of_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20.41dp"
            android:text="12.6k"
            android:layout_marginLeft="22dp"
            android:layout_below="@id/posts"
            android:elevation="3dp"
            android:textColor="#000"></TextView>

        <TextView
            android:id="@+id/no_of_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20.41dp"
            android:text="1211"
            android:layout_marginLeft="268dp"
            android:layout_below="@id/posts"
            android:elevation="3dp"
            android:textColor="#000"></TextView>

        <TextView
            android:id="@+id/Followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Followers"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/people_profession"
            android:layout_marginTop="23dp"
            android:elevation="3dp"
            android:textColor="#000"></TextView>

        <TextView
            android:id="@+id/Following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Following"
            android:layout_marginLeft="262dp"
            android:layout_below="@id/people_profession"
            android:layout_marginTop="23dp"
            android:elevation="3dp"
            android:textColor="#000"></TextView>



        <androidx.cardview.widget.CardView
            android:layout_width="323dp"
            android:layout_height="199dp"
            android:layout_marginTop="57dp"
            app:cardBackgroundColor="#E8E8E8">

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>